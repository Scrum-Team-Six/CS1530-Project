<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Travel Budget Pro</h1>
        <form action="/login" method="post">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Login</button>
        </form>
        <!--
          error message in notes goes here
      -->
        <div class="register-link">
            <a href="/registration">New user? Register here</a>
        </div>
    </div>
    <script>
      // Handles when Enter key is pressed
      function handleKeyPress(event) {
        if (event.key === 'Enter') {
          // Submit the form
          event.preventDefault(); // Prevent default form submission behavior
          document.getElementById('loginForm').submit();
        }
      }

      // Attach event listeners to form fields for "keypress" event
      document.querySelectorAll('#loginForm input').forEach(input => {
        input.addEventListener('keypress', handleKeyPress);
      });

      // Handles form submission
      function handleFormSubmit(event) {
        event.preventDefault(); // Prevent default form submission behavior
        const form = event.target; // Get the form element

        // Submit the form using AJAX
        fetch(form.action, {
          method: form.method,
          body: new FormData(form)
        })
          .then(response => {
            if (response.redirected) {
              // Redirected - navigate to the redirected URL
              window.location.href = response.url;
            } else {
              // Not redirected - handle the response accordingly (e.g., display error message)
              console.log('Login successful');
            }
          })
          .catch(error => {
            // Catch other errors that may occur
            console.error('Error:', error);
          });
      }

      // Attach event listener to form submission
      document.getElementById('loginForm').addEventListener('submit', handleFormSubmit);

      function changeBackground() {
      var randomNumber = getRandomInt(1, 22); // Generate a random number between 1 and 22
      var imageUrl = 'cities/' + randomNumber + '.jpg'; // Construct the image URL
      document.body.style.backgroundImage = 'url("' + imageUrl + '")'; // Set the background image
    }

    // Call the function to change background when the page loads
    window.onload = function() {
      changeBackground();
    };
    </script>

</body>
</html>

