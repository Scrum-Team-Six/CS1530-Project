  // Function to calculate and update the total cost and the max budget display
  function updateBudgetDisplays() {
    var maxBudgetAmount = parseFloat(document.getElementById('max-budget').value) || 0;
    var totalCost = 0;

    // Calculate total cost from Handsontable data
    var data = hot.getData();
    data.forEach(function(row) {
      totalCost += parseFloat(row[2]) || 0;  // Assuming the cost is in the third column
    });

    // Update the total cost element
    var totalCostElement = document.getElementById('total-cost');
    totalCostElement.textContent = maxBudgetAmount ? 
      `Total Cost: ${totalCost.toFixed(2)} / ${maxBudgetAmount.toFixed(2)}` : 
      `Total Cost: ${totalCost.toFixed(2)}`;

    // Update the Budget Max display
    var totalCostElement = document.getElementById('total-cost');
  if (maxBudgetAmount > 0) {
    totalCostElement.textContent = `Total Cost: ${totalCost.toFixed(2)} / ${maxBudgetAmount.toFixed(2)}`;
  } else {
    totalCostElement.textContent = `Total Cost: ${totalCost.toFixed(2)}`;
  }
}

  // Event listener for the max budget input
  document.getElementById('max-budget').addEventListener('input', updateBudgetDisplays);

  // Hook to update total cost after any changes in the Handsontable data
  hot.addHook('afterChange', function(changes, source) {
    if (source === 'edit' || source === 'loadData') {
      updateBudgetDisplays();
    }
  });

  // Initially call the update function to set the initial values
  document.addEventListener('DOMContentLoaded', function() {
    updateBudgetDisplays(); // Call this after the Handsontable instance 'hot' has been initialized
  });

  //------------------     category section
  
// Object to store the total cost per category
var categoryMaxes = {
  'Food': document.getElementById('category-food-max'),
  'Transportation': document.getElementById('category-transportation-max'),
  'Entertainment': document.getElementById('category-entertainment-max'),
  'Lodging': document.getElementById('category-lodging-max')
};

// Function to update the percentage spent for each category
function updateCategoryPercentages() {
  // Calculate the cost per category from the Handsontable data
  var data = hot.getData();
  var categoryCosts = {
    'Food': 0,
    'Transportation': 0,
    'Entertainment': 0,
    'Lodging': 0
  };
  
  data.forEach(function(row) {
    var category = row[0];
    var cost = parseFloat(row[2]) || 0;
    if (category in categoryCosts) {
      categoryCosts[category] += cost;
    }
  });

  // Update the percentage for each category
  for (var category in categoryCosts) {
    var max = parseFloat(categoryMaxes[category].value) || 0;
    var cost = categoryCosts[category];
    var percentage = max ? (cost / max * 100).toFixed(2) : '0';
    document.getElementById(`category-${category.toLowerCase()}-percentage`).textContent = `${percentage}%`;
  }
}

// Set up event listeners for changes in the category max inputs
Object.values(categoryMaxes).forEach(input => {
  input.addEventListener('input', function() {
    updateCategoryPercentages();
  });
});

// Set up a hook to update percentages when the Handsontable data changes
hot.addHook('afterChange', function(changes, source) {
  if (source === 'edit' || source === 'loadData') {
    updateCategoryPercentages();
  }
});

// Call the function to set the initial state
updateCategoryPercentages();

  </script>
